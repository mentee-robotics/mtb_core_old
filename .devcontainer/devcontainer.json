// See https://aka.ms/vscode-remote/devcontainer.json for format details.

{
	"name": "${localWorkspaceFolderBasename}",
	"privileged": true,
	"remoteUser": "${localEnv:USERNAME}",
	"dockerFile": "Dockerfile",
	"build": {
		"args": {
			"BASE_IMAGE": "osrf/ros:foxy-desktop",
			"WORKSPACE": "/home/ws",
			"ROS_DISTRO": "foxy",
			"USERNAME": "${localEnv:USERNAME}"
		},
		"target": "development"
	},
	"workspaceFolder": "/home/ws",
    "workspaceMount": "source=${localWorkspaceFolder},target=/home/ws,type=bind",
	"customizations": {
		"vscode": {
			"extensions": [
				"DotJoshJohnson.xml",
				"ms-azuretools.vscode-docker",
				"ms-python.python",
				"ms-vscode.cpptools",
				"ms-vscode.cpptools-themes",
				"donjayamanne.python-extension-pack",
				"ms-vscode.cpptools-extension-pack",
				"redhat.vscode-yaml",
				"smilerobotics.urdf",
				"streetsidesoftware.code-spell-checker",
				"twxs.cmake",
				"yzhang.markdown-all-in-one",
				"zachflower.uncrustify",
				"betwo.b2-catkin-tools",
				"mhutchie.git-graph",
				"GitHub.copilot",
				"eamodio.gitlens",
				"ms-iot.vscode-ros"
			]
		}
	},
	"containerEnv": {
		"DISPLAY": "unix:${localEnv:DISPLAY}", // for GUI applications
		"ROS_LOCALHOST_ONLY": "1", // DO NOT publish ROS topics over WIFI
		"ROS_DOMAIN_ID": "42",
		"SSH_AUTH_SOCK": "/ssh-agent"
	},
	"runArgs": [
		"--net=host",
		"-e", "DISPLAY=${env:DISPLAY}",
		"--cap-add=SYS_PTRACE",
		"--security-opt=seccomp:unconfined",
		"--security-opt=apparmor:unconfined"
	],
	"mounts": [
		"source=/tmp/.X11-unix,target=/tmp/.X11-unix,type=bind,consistency=cached",
		 "source=/dev/dri,target=/dev/dri,type=bind,consistency=cached",
		 "source=${localEnv:SSH_AUTH_SOCK},target=/ssh-agent,type=bind,consistency=cached"
	],	
	// "postCreateCommand": "sudo rosdep update && sudo rosdep install --from-paths src --ignore-src -y && sudo chown -R mosheap /home/ws/"
	"postCreateCommand": "sudo chown -R ${localEnv:USERNAME} /home/ws/"
}
